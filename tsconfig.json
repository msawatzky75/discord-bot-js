{
	"compilerOptions": {
		"module": "ESNext",
		"target": "esnext",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"types": ["node"],
		"baseUrl": "./"
	},
	"files": ["src/index.ts"],
	"include": ["src/**/*.d.ts"]
}
